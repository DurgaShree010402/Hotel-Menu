#include<stdio.h>
int main()
{
 int choice;
 printf("____________________________________Hotel Captain Desire________________________________________\n");
 printf("                                     Menu of Food Items                                         \n");
 printf("1.Burger\n 2.French Fries\n 3.Pizza\n 4.Sandwich\n 5.Pasta\n");
 printf("Select the food item you need to order\n");
 scanf("%d",&choice);
 switch(choice)
 	{ 
	  case 1:
	         printf("Food Item:Burger\n Price-Rs 179\n");
	         break;
	  case 2:
	         printf("Food Item:French Fries\n Price-Rs 99\n");
	         break;
	  case 3:
	  	     printf("Food Item:Pizza\n Price-Rs 239\n");
	  	     break;
	  case 4:
	  	     printf("Food Item:Sandwich\n Price-Rs 149\n");
	  	     break;
	  case 5:
	  	     printf("Food Item:Pasta\n Price-Rs 179\n");
	  	     break;
	default:printf("Invalid Choice\n");
            break;
	  }
 }
 
